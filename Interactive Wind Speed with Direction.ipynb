    "\n",
    "x_wind0 = ro1_cubes.extract(\"x_wind\")[0] # extract returns list of cubes\n",
    "y_wind0 = ro1_cubes.extract(\"x_wind\")[0]\n",
    "#x_wind = x_wind0[0,0]   #######x_wind0[time-dim,level-dim]\n",
    "\n",
    "#create map\n",
    "map0 = folium.Map(location=[-35.7, 136.4],#tiles=\"Cartodb Positron\",\n",
    "                  zoom_start=11)\n",
    "\n",
    "#legend\n",
    "steps=30\n",
    "colormap = branca.colormap.LinearColormap(['blue', 'cyan', 'green', 'yellow', 'red'],\n",
    "                               index=[0, .2,.4, .6, .8])\n",
    "colormap._repr_html_()\n",
    "\n",
    "gradient_map=defaultdict(dict)\n",
    "\n",
    "for i in range(steps):\n",
    "        gradient_map[1/steps*i] = colormap.rgb_hex_str(1/steps*i)\n",
    "    \n",
    " #add color bar at the top of the map\n",
    "colormap.add_to(map0)\n",
    "\n",
    "\n",
    "#wind direction quivers\n",
    "def quiver(x, y, U, V):\n",
    "    \n",
    "    fig, ax = plt.subplots()\n",
    "    \n",
    "    kw = dict(color='black', alpha=0.8, scale=1)\n",
    "    q = ax.quiver(x, y, U, V, **kw)\n",
    "    \n",
    "    gj = mplleaflet.fig_to_geojson(fig=fig)\n",
    "    \n",
    "    feature_group0 = folium.FeatureGroup(name='quiver')\n",
    "\n",
    "    for feature in gj['features']:\n",
    "        if feature['geometry']['type'] == 'Point':\n",
    "            lon, lat = feature['geometry']['coordinates']\n",
    "\n",
    "            div = feature['properties']['html']\n",
    "\n",
    "            icon_anchor = (feature['properties']['anchor_x'],\n",
    "                            feature['properties']['anchor_y'])\n",
    "\n",
    "            icon = folium.features.DivIcon(html=div,\n",
    "                                           icon_anchor=icon_anchor)\n",
    "            marker = folium.Marker([lat, lon], icon=icon)\n",
    "            feature_group0.add_child(marker)\n",
    "        else:\n",
    "            msg = \"Unexpected geometry {}\".format\n",
    "            raise ValueError(msg(feature['geometry']))\n",
    "    \n",
    "    return feature_group0\n",
    "\n",
    "\n",
    "#@jit(target =\"cuda\") \n",
    "#def compute():\n",
    "\n",
    "index = 1 \n",
    "for i in range(1):\n",
    "    x_wind = x_wind0[0,0] #subset to first time, first level shown\n",
    "    y_wind = y_wind0[0,0]\n",
    "    \n",
    "    lats,lons = x_wind.coord('latitude').points, x_wind.coord('longitude').points\n",
    "    speed = (x_wind**2 + y_wind**2)**0.5\n",
    "    \n",
    "    u = x_wind\n",
    "    v = y_wind\n",
    "    lon = lons\n",
    "    lat = lats\n",
    "    lon, lat = np.meshgrid(lon, lat)\n",
    "    mask_x = np.logical_and(lon > 136.3, lon < 136.8)\n",
    "#print(mask_x)\n",
    "    mask_y = np.logical_and(lat > -35.8, lat < -35.3)\n",
    "#print(mask_y)\n",
    "    mask = np.logical_and(mask_x, mask_y)\n",
    "#print(mask)\n",
    "    \n",
    "    x = lon[mask]\n",
    "    y = lat[mask]\n",
    "    u.data = u.data/128  #reduced the vectors by power of 2 for reducing browser load\n",
    "    v.data = v.data/128\n",
    "  \n",
    "    U = u.data[mask].filled(fill_value=0)\n",
    "    V = v.data[mask].filled(fill_value=0)\n",
    "    S = speed.data[mask].filled(fill_value=0)\n",
    "\n",
    "            \n",
    "    feature_group0 = quiver(x, y, U, V)\n",
    "    map0.add_child(feature_group0)\n",
    "    \n",
    "    heatmap_wide = HeatMap(list(zip(y.data, x.data, S.data)),\n",
    "                        min_opacity=0.2,\n",
    "                        radius=10, blur=15, \n",
    "                        max_zoom=1, \n",
    "                         )\n",
    "    \n",
    "    map0.add_child(heatmap_wide)\n",
    "    print(i)\n",
    "\n",
    "map0.add_child(folium.map.LayerControl())\n",
    "\n",
    "\n",
    "map0.save (r'd:\\PHD\\APR-Internship_BOM\\visualize\\my codes\\deliver codes\\windSpeednDirection.html')\n",
    "webbrowser.open(r'd:\\PHD\\APR-Internship_BOM\\visualize\\my codes\\deliver codes\\windSpeednDirection.html')\n"
